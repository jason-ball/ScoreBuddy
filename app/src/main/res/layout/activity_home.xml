<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/bNewGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_golf_course_24"
        android:drawableTint="@color/white"
        android:text="New Game"
        android:textAppearance="@style/TextAppearance.ScoreBuddy.LabelText"
        app:layout_constraintBottom_toTopOf="@+id/bProfile"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/bStatsProgress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_bar_chart_24"
        android:drawableTint="@color/white"
        android:text="Stats &amp; Progress"
        android:textAppearance="@style/TextAppearance.ScoreBuddy.LabelText"
        app:layout_constraintBottom_toTopOf="@+id/bGameHistory"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/bProfile"
        app:layout_constraintTop_toBottomOf="@+id/bProfile"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/bLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_exit_to_app_24"
        android:drawableTint="@color/white"
        android:text="Log Out"
        android:textAppearance="@style/TextAppearance.ScoreBuddy.LabelText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/bGameHistory"
        app:layout_constraintTop_toBottomOf="@+id/bGameHistory"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/bGameHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_history_24"
        android:drawableTint="@color/white"
        android:text="Game History"
        android:textAppearance="@style/TextAppearance.ScoreBuddy.LabelText"
        app:layout_constraintBottom_toTopOf="@+id/bLogout"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/bStatsProgress"
        app:layout_constraintTop_toBottomOf="@+id/bStatsProgress"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/bProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_person_24"
        android:drawableTint="@color/white"
        android:text="Profile"
        android:textAppearance="@style/TextAppearance.ScoreBuddy.LabelText"
        app:layout_constraintBottom_toTopOf="@+id/bStatsProgress"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/bNewGame"
        app:layout_constraintTop_toBottomOf="@+id/bNewGame"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:theme="@style/TextAppearance.ScoreBuddy.AppName"
        app:layout_constraintBottom_toTopOf="@+id/bNewGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>