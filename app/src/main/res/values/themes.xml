<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScoreBuddy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1FC600</item>
        <item name="colorPrimaryVariant">#063b00</item>
        <item name="colorOnPrimary">#063b00</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="titleTextAppearance">@style/TextAppearance.ScoreBuddy.LabelText</item>
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:windowBackground">#0A5D00</item>
        <item name="android:colorBackground">#0A5D00</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Theme.ScoreBuddy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ScoreBuddy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ScoreBuddy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.ScoreBuddy.Alert" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="colorOnPrimary">#1FC600</item>
    </style>
</resources>